<UserControl x:Class="AnalitF.Net.Client.Views.Dialogs.GiftCardNumber"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:c="clr-namespace:AnalitF.Net.Client.Controls"
	MinWidth="200">
	<StackPanel Margin="4">
		<StackPanel Name="MainPanel">
			<Label>Номер/штрих-код сертификата/карты:</Label>
			<TextBox Name="Number" />
			<StackPanel Orientation="Horizontal" Margin="0, 10, 0, 10">
				<Button Name="OK" Margin="0, 0, 5, 0">ОК</Button>
				<Button Name="TryClose">Отмена</Button>
			</StackPanel>
		</StackPanel>
	</StackPanel>
</UserControl>
